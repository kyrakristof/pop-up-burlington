<p class='btnContainer'><a id="goto_step1a" class="btn red" href="#ideaModal" data-toggle="modal">I have an idea</a></p>

<div class="modal fade" id="ideaModal"> 
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Yeah!  Tell us about your awesome idea!</h3>
  </div>
  <%= form_for @idea, :html => { :multipart => true } do |f| %>
  <div class="modal-body">
    <% if @idea.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

        <ul>
        <% @idea.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="actions">
      <div id="step1a">
        <h4>Step 1 of 4</h4>
        <%= f.label "success_criteria" %>
        <%= f.text_area :success_criteria %>

        <%= f.label "goodwill" %>
        <%= f.text_area :goodwill %>
      </div>

      <div id="step2a">
        <h4>Step 2 of 4</h4>
        <%= f.label :logistics %>
        <%= f.text_area :logistics %>

        <%= f.label :features %>
        <%= f.text_area :features %>
      </div>

      <div id="step3a">
        <h4>Step 3 of 4</h4>

        <%= f.label :formality %>
        <%= f.text_area :formality %>

        <%= f.label :capacity %>
        <%= f.text_field :capacity, :class => "span1" %> People
      </div>

      <div id="step4a">
        <h4>Step 4 of 4</h4>
        
        <%= f.label "Title of Idea" %>
        <%= f.text_field :name %>

        <%= f.label "Short Description" %>
        <%= f.text_field :description %>

        <%= f.label "My Contact information" %>
        <%= f.text_field :contact, :placeholder => "phone or email" %>

        <%= f.label :photo %>
        <%= f.file_field :photo %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
   
    <span id="back_step1a" class="btn">Back</span>
    <span id="back_step2a" class="btn">Back</span>
    <span id="back_step3a" class="btn">Back</span>


    <span id="goto_step2a" class="btn btn-primary">Next</span>
    <span id="goto_step3a" class="btn btn-primary">Next</span>
    <span id="goto_step4a" class="btn btn-primary">Next</span>

    <%= f.submit "Submit for approval", :class => "btn btn-primary", :id => "complete_stepsa" %>
    <br/><br/>
    <a href="#" class="btn" data-dismiss="modal">Cancel</a>
  </div>
  <% end %>
</div>